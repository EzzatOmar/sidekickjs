<!-- This example requires Tailwind CSS v2.0+ -->
{{! vars: label: string}}
{{! vars: bg-color: green | blue | indigo | ..tailwind colors }}
<button type="button" 
        class="inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded shadow-sm text-white bg-{{bg-color}}-600 hover:bg-{{bg-color}}-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-{{bg-color}}-500">
  <a {{#aTag_attr}}
     {{{.}}}
     {{/aTag_attr}}
     >
  {{label}}
  </a>
</button>
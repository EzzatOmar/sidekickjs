<!--
  vars:
    color: green, blue, [tailwindcolors]
    id: string
    label: string
    placeholder: string
-->
<div>
  <label for="{{id}}" class="sr-only">{{label}}</label>
  <input type="text" name="{{id}}" id="{{id}}" class="shadow-sm focus:ring-{{color}}-500 focus:border-{{color}}-500 block w-full sm:text-sm border-gray-300 rounded-md" placeholder="{{placeholder}}">
</div>
